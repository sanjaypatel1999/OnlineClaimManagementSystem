<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Assign/Change Role  &nbsp;</h4>

        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6 offset-3">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group" id="formGroupUserName">
                                <label>User Name <span class="mandatory">*</span></label>
                                <select class="form-control" id="ddlUserName">
                                    <option value="-1">Select</option>
                                </select>
                                <span id="errUserName"></span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group" id="formGroupRoles">
                                <label>Roles <span class="mandatory">*</span></label>
                                <select class="form-control" id="ddlRoles">
                                    <option value="-1">Select</option>
                                </select>
                                <span id="errRoles"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 mt-3">
                            <button id="btnReload" class="btn btn-info">Refresh</button>
                        </div>
                        <div class="col-6 mt-3">
                            <button id="btnSubmit" class="btn btn-info float-right">Submit</button>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 mt-3">
                            <p id="msg"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/js/Role/AssignRoles.js" type="text/javascript"></script>
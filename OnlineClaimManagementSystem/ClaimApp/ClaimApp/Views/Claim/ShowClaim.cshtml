    <div class="modal-dialog">
        <div class="modal-content" style="width:43pc; margin-left:-51px">
            <div class="modal-header">
                <h4 class="modal-title">Action Information</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered" id="tblActionHistory">
                    <thead>
                        <tr>
                            <td>Action On</td>
                            <td>Action By</td>
                            <td>Action</td>
                            <td>Remarks</td>
                         
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
             </table>

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!--End modal for action hisotry-->

